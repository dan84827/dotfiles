###---GENERAL---###
set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:DejaVu 7

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Set the terminal to urxvt
set $term urxvt

#redundant--see .zshrc
set $BROWSER firefox

# i3blocks config
bar {
        status_command i3blocks -c ~/.config/i3/i3blocks.conf
        tray_output primary
	font pango:Inconsolata 10
}

# always load redshift on startup
exec redshift -o

##composite manager
#exec --no-startup-id compton

#remove the edges to the tiles
hide_edge_borders both

#load a wallpaper on startup with feh
exec_always feh --bg-scale /home/dan/Pictures/wallpapers/foggy_town.jpg

#lauch network applet
exec_always --no-startup-id nm-applet

#launch solaar on startup -- how to just keep in background?
exec --no-startup-id solaar




###---BASIC BINDINGS---###

#Return
#start a terminal
bindsym $mod+Return exec $term
#start a terminal and launch ranger
bindsym $mod+Shift+Return exec $term -e ranger

#Space
# toggle tiling / floating
bindsym $mod+Shift+space floating toggle
# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

#delete
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+Delete exec ~/.i3/exit_menu.sh "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

#backslash(|)
#start a terminal and attach to last tmux session 
bindsym $mod+backslash exec $term -e tmux attach
#start a terminal and attach to last tmux session 
bindsym $mod+Shift+backslash exec $term -e tmux new-session
	
#Escape
# making mod+shift+Escape lock i3 
bindsym $mod+shift+Escape  exec i3lock -c "581b5e"


#	NOT USED
#Print
#Scroll_Lock
#Insert
#Pause
#Grave(asciitilde?)
#semicolon
#apostrophe
#slash(?)
#BackSpace





###---LETTER KEY BINDINGS---###

#A
# focus the parent container
bindsym $mod+a focus parent

#B
# bind mod+shift+b to BROWSER
bindsym $mod+Shift+b exec $BROWSER

#C
# reload the configuration file
#bindsym $mod+Shift+c reload
#launch octave command line
bindsym $mod+Shift+c exec $term -e octave --no-gui -q


#D
# start dmenu (a program launcher)
bindsym $mod+d exec dmenu_run -l 100

# focus the child container
#bindsym $mod+d focus child

#E
#enable normal/split containers
bindsym $mod+e layout toggle split

#F
# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

#G
# split in horizontal orientation
bindsym $mod+g split h

#H
# change focus
bindsym $mod+h focus left
# move focused window
bindsym $mod+Shift+h move left

#I
# resize window
bindsym $mod+i resize grow height 10 px or 10 ppt

#J
# change focus
bindsym $mod+j focus down
# move focused window
bindsym $mod+Shift+j move down

#K
# change focus
bindsym $mod+k focus up
# move focused window
bindsym $mod+Shift+k move up

#L
# change focus
bindsym $mod+l focus right
# move focused window
bindsym $mod+Shift+l move right

#M

#N
# bind mod+shift+n to nautilis file browser
bindsym $mod+shift+n exec nautilus

#O
# resize window
bindsym $mod+o resize grow width 10 px or 10 ppt
#bind mod+o to shutter
bindsym $mod+Shift+o exec shutter

#P
# bind mod+p to redshift -o (oneshot redshift)
bindsym $mod+p exec redshift -o 
# bind mod+shift+p to redshift -x (quit redshift)
bindsym $mod+Shift+p exec redshift -x

#Q
# kill focused window
bindsym $mod+q kill

#R
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

#S
# enable stacked containers
bindsym $mod+s layout stacking

#T
# bind mod+shift+t to Turtl
bindsym $mod+Shift+t exec /home/dan/apps/turtl/turtl

#U
# resize window
bindsym $mod+u resize shrink height 10 px or 10 ppt
#bind mod+shift+u to slack
bindsym $mod+Shift+u exec slack

#V
# split in vertical orientation
bindsym $mod+v split v

#W
#enable tabbed containers
bindsym $mod+w layout tabbed

#X

#Y
# resize window
bindsym $mod+y resize shrink width 10 px or 10ppt

#Z





###---WORKSPACE BINDINGS---###


# set my workspace variables
set $workspace1 "1"
set $workspace2 "2"
set $workspace3 "3"
set $workspace4 "4"
set $workspace5 "5"
set $workspace6 "6"
set $workspace7 "7"
set $workspace8 "8"
set $workspace9 "9"
set $workspace10 "10"
 
# switch to workspace
bindsym $mod+1 workspace $workspace1
bindsym $mod+2 workspace $workspace2
bindsym $mod+3 workspace $workspace3
bindsym $mod+4 workspace $workspace4
bindsym $mod+5 workspace $workspace5
bindsym $mod+6 workspace $workspace6
bindsym $mod+7 workspace $workspace7
bindsym $mod+8 workspace $workspace8
bindsym $mod+9 workspace $workspace9
bindsym $mod+0 workspace $workspace10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $workspace1
bindsym $mod+Shift+2 move container to workspace $workspace2
bindsym $mod+Shift+3 move container to workspace $workspace3
bindsym $mod+Shift+4 move container to workspace $workspace4
bindsym $mod+Shift+5 move container to workspace $workspace5
bindsym $mod+Shift+6 move container to workspace $workspace6
bindsym $mod+Shift+7 move container to workspace $workspace7
bindsym $mod+Shift+8 move container to workspace $workspace8
bindsym $mod+Shift+9 move container to workspace $workspace9
bindsym $mod+Shift+0 move container to workspace $workspace10

## load a particular program in a certain workspace
#assign [class="Firefox"] $workspace2
#assign [class="Turtl"] $workspace1

# move arround between workspaces
bindsym $mod+bracketleft 	workspace prev
bindsym $mod+Shift+bracketleft 	workspace $workspace1
bindsym $mod+bracketright 	workspace next
bindsym $mod+Shift+bracketright workspace $workspace10


###---ARROW KEYS---###
# change focus
bindsym $mod+Left focus left
bindsym $mod+Shift+Left move left

bindsym $mod+Down focus down
bindsym $mod+Shift+Down move down

bindsym $mod+Up focus up
bindsym $mod+Shift+Up move up

bindsym $mod+Right focus right
bindsym $mod+Shift+Right move right


